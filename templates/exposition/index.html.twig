{% extends 'base.html.twig' %}

{% block title %}Hello ExpositionController!{% endblock %}

{% block body %}
    <div class="exposition" style="background-image: url(/images/expobienvenue-bg-page.png)">
        <div class="container-fluid position-relative">
            <div class="exposition-banner" style="background-size:cover; background-image: url(/uploads/images/{{ exposition.bannerImage }})">
            </div>
        </div>
        <div class="container pt-5">
            <div class="row mt-5">
                <div class="col-7 p-2 mt-5">
                    <div class="exposition-main-image" style="background-size:cover; background-image: url(/uploads/images/{{ exposition.tinyImage }})"></div>
                </div>
                <div class="col-5 p-2 mt-5">
                    <div class="exposition-secondary-image" style="background-size:cover; background-image: url(/images/expobienvenue-photo2.png)"></div>
                    <div class="row justify-content-between">
                        <div class="col-auto pt-3">
                            <div class="current-event--main-square exposition--main-square text-center">
                                {{ exposition.startAt|date('d') }} <br>
                                {{ exposition.startAt|date('M', "Europe/Paris") }} <br>
                                - <br>
                                {{ exposition.endAt|date('d') }} <br>
                                {{ exposition.endAt|date('M', "Europe/Paris") }}
                            </div>
                        </div>
                        <div class="col-auto pt-3">
                            <div class="exposition-small-image" style="background-image: url(/uploads/images/{{ exposition.artistPhoto }})"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-4 mb-5">
            <div class="row">
                <div class="col-9">
                    <div class="col-8 p-0">La Saison culturelle - Bienvenue 2021</div>
                    <div class="col-6 exposition-description my-4">Exposition collective d'artistes</div>
                    <div class="font-weight-bold mb-3 font-italic">{{ exposition.shortDescription }}</div>
