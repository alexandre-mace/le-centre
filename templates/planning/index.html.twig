{% extends 'base.html.twig' %}

{% block title %}Planning{% endblock %}

{% block body %}
<div class="planning position-relative py-5" style="background-image: url(/images/programme-bg-page.png); background-size: cover;">
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col text-center">
                <div class="planning-year">2021</div>
            </div>
        </div>
    </div>
    <div class="pb-5">
        <div class="container position-relative">
            <div class="white-line">
            </div>
            {% for exposition in expositions %}
                {{ include('planning/event.html.twig', {odd: loop.index is odd, exposition: exposition}) }}
            {% endfor %}
        </div>
    </div>
    <div class="container mt-5 pt-4 pb-4 mb-3">
        <div class="row">
            <div class="col text-center">
                <div class="planning-year">2020</div>
            </div>
        </div>
    </div>
    <div class="container position-relative">
        <div class="white-line second-white-line">
        </div>
        <div class="row pt-5 justify-content-center">
            <div class="col-auto text-center pt-5">
                <div class="square-action secondary-square ternary-square position-relative mx-auto"></div>
                <div class="hidden-text text-no-flow">Voir l'historique</div>
            </div>
        </div>
    </div>
    <div class="mb-5 py-5"></div>
    <div class="my-5"></div>
</div>
{% endblock %}
